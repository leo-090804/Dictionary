<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="480.0" prefWidth="730.0" style="-fx-background-color: #ADD8E6;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="DicFX.Game.GameController">
    <children>
        <GridPane fx:id="gameMain" alignment="CENTER" hgap="5" layoutX="293.0" layoutY="48.0"
                  onKeyPressed="#onKeyPressed" prefHeight="385.0" prefWidth="417.0"
                  stylesheets="@game.css" vgap="5"/>
        <ImageView fitHeight="108.0" fitWidth="198.0" layoutX="50.0" layoutY="39.0"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../img/pngwing.com.png"/>
            </image>
        </ImageView>
        <Button fx:id="guideBtn" layoutX="89.0" layoutY="171.0" mnemonicParsing="false"
                onMouseClicked="#GuidePage" prefHeight="26.0" prefWidth="120.0"
                stylesheets="@game.css" text="How to play">
            <font>
                <Font name="Arial" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="restartBtn" layoutX="89.0" layoutY="279.0" mnemonicParsing="false"
                onMouseClicked="#ResetGame" prefHeight="26.0" prefWidth="120.0"
                stylesheets="@game.css" text="Restart">
            <font>
                <Font name="Arial" size="14.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>