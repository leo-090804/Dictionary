        <Button fx:id="transBtn" layoutX="331.0" layoutY="399.0" mnemonicParsing="false" onMouseClicked="#translateTextInput" text="Translate" />
        <Label fx:id="Label1" alignment="CENTER" layoutX="46.0" layoutY="17.0" prefHeight="48.0" prefWidth="300.0" text="ENGLISH" textAlignment="CENTER" />
