        <ImageView fx:id="Img1" fitHeight="48.0" fitWidth="48.0" layoutX="110.0" layoutY="17.0" pickOnBounds="true" preserveRatio="true" />
        <ImageView fx:id="Img2" fitHeight="48.0" fitWidth="48.0" layoutX="429.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
