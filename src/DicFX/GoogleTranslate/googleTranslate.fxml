            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="soundBtn1" contentDisplay="GRAPHIC_ONLY" layoutX="272.0" layoutY="33.0" mnemonicParsing="false" onMouseClicked="#playAudioIn" prefHeight="42.0" prefWidth="42.0" text="Button" textAlignment="CENTER">
         <graphic>
            <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../img/icons8-sound-32.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
    </children>
