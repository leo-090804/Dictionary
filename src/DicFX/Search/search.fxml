            <HBox alignment="TOP_RIGHT" layoutX="34.0" layoutY="36.0" prefHeight="42.0" prefWidth="360.0">
               <children>
                  <Button fx:id="soundBtn" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onMouseClicked="#soundWord" prefHeight="42.0" prefWidth="42.0" text="Button" textAlignment="CENTER">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../img/icons8-sound-32.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
