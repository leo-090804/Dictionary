<AnchorPane prefHeight="480.0" prefWidth="730.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DicFX.Search.searchController">
   <children>
      <AnchorPane prefHeight="480.0" prefWidth="300.0">
         <children>
            <ListView fx:id="listView" layoutX="20.0" layoutY="96.0" prefHeight="360.0" prefWidth="280.0" style="-fx-border-radius: 10%;" />
            <TextField fx:id="inputtext" layoutX="33.0" layoutY="38.0" prefHeight="40.0" prefWidth="200.0" />
            <Button fx:id="searchBtn" contentDisplay="GRAPHIC_ONLY" layoutX="236.0" layoutY="38.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="Button">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../img/search.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="300.0" layoutY="1.0" prefHeight="480.0" prefWidth="430.0">
         <children>
            <TextArea fx:id="textOut" layoutX="34.0" layoutY="96.0" prefHeight="360.0" prefWidth="360.0" />
